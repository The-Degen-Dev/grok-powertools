{
  "manifest_version": 3,
  "name": "Grok Media Downloader",
  "version": "1.0",
  "description": "Automate downloading media from Grok timeline.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "*://*.x.com/*",
    "*://*.grok.x.ai/*",
    "*://grok.com/*",
    "*://*.grok.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Grok Downloader"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.x.com/*",
        "*://*.grok.x.ai/*",
        "*://grok.com/*",
        "*://*.grok.com/*",
        "*://imagine-public.x.ai/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}